<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">

	Há erros no formulário, por favor verifique.

    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= error_tag @category, :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
