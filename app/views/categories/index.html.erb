<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>

            <div class="btn-acao">
              <%= link_to t('links.show'), category %>
            </div>

        </td>
        <td>

          <div class="btn-acao">
             <%= link_to t('links.edit'), edit_category_path(category) %>
          </div>

        </td>
        <td>

            <div class="btn-acao">
               <%= link_to t('links.destroy'), category, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>