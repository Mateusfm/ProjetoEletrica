    <% @services.each do |service| %>
    <div class="feed-body">
            <div class="feed-img">
              <%= link_to (image_tag (service.imagem)), service%>
            </div>

      <% if user_signed_in? %>
            <% if current_user.admin? %>
                <%= link_to t('links.edit'), edit_service_path(service) %> |
                <%= link_to t('links.destroy'), @service, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
      <% end %>

      <div class="feed-text">

        	<h1>
         	  <%= service.title %>
        	</h1>

        	<p>
         	  <%= service.description %>
        	</p>

      </div>

      <div id="link-orc">
        <%= link_to 'Pedir orÃ§amento', new_contact_path %>
      </div>

    </div>

    <% end %>
