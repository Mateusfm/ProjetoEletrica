<div class="template-direita">

        <section>

            <h3> Categorias </h3>
                <hr>
            <div>
                <ul >

                        <% Category.all.each do |category| %>
                           <li>
                              <%= link_to (category.name), category %>
                           </li>
                        <% end %>
               </ul>
            </div>

            <hr>

        </section>

        <section>
            <div>

               <h2> Ultimas noticias</h2>
                  <hr>

                     <ul >

                        <% Post.take(3).each do |post| %>
                           <div  class="celula-template-direita">

                               <li>
                                   <%= link_to (image_tag (post.imagem_mini)), post%>
                               </li>

                               <li>
                                   <%= link_to (post.titulo), post, :id => 'link-noticia'  %>
                               </li>

                            </div>

                        <% end %>
                   </ul>
            </div>

            <hr>

        </section>



</div>