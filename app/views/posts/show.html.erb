<% if user_signed_in? %>
 <% if policy(@post).new? %>

  <%= link_to t('links.edit'), edit_post_path(@post) %> |
  <%= link_to t('posts.new.title'), new_post_path %> |
  <%= link_to t('links.destroy'), @post, method: :delete, data: { confirm: 'Are you sure?' } %>

 <% end %>
<% end %>

<div class="post-body">
    <div class="post-conteiner-title">

            <h1>
              <%= @post.titulo %>
            </h1>

            <p id="post-subtitle">
              <%= @post.subtitulo %>
            </p>

    </div>

            <div>
              <%= image_tag (@post.imagem),  id: 'post-img' %>
            </div>

            <p id="post-text">
              <%= @post.texto %>
            </p>
</div>

